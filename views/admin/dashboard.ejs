<div class="admin-title">
    <h2>Events</h2>
    <a href="/add-event" class="button">+ Add New</a>
  </div>
  
  <ul class="admin-posts">
  
    <% data.forEach(post => { %>
     
      <li>
        <a href="/event/<%= post._id %>">
          <%= post.name %> &nearr;
        </a>
        <div class="admin-post-controls">
          <a href="/edit-event/<%= post._id %>" class="btn">Edit</a>
  
          <form action="/delete-event/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn-delete btn">
          </form>
  
        </div>
  
      </li>
  
    <% }) %>
  </ul>